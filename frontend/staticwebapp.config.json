{
    "routes": [
        {
            "route": "/admin/*",
            "allowedRoles": [
                "admin"
            ]
        },
        {
            "route": "/authenticated/*",
            "allowedRoles": [
                "authenticated"
            ]
        }
    ],
    "auth": {
        "rolesSource": "/api/function1",
        "identityProviders": {
            "customOpenIdConnectProviders": {
                "b2c": {
                    "registration": {
                        "clientIdSettingName": "AAD_CLIENT_ID",
                        "clientCredential": {
                            "clientSecretSettingName": "AAD_CLIENT_SECRET"
                        },
                        "openIdConnectConfiguration": {
                            "wellKnownOpenIdConfiguration": "https://hihorikaadab2c.b2clogin.com/hihorikaadab2c.onmicrosoft.com/B2C_1_signupsignin1/v2.0/.well-known/openid-configuration"
                        }
                    },
                    "login": {
                        "loginParameterNames": [
                            "resource=https://graph.microsoft.com"
                        ],
                        "nameClaimType": "emails",
                        "scopes": [
                            "openid"
                        ]
                    }
                }
            }
        }
    },
    "globalHeaders": {
        "Cache-Control": "no-cache"
    }
}